<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('includes/head', { title: 'Add Note' }) %>
  <link rel="stylesheet" href="/styles/posts.css">
</head>

<body>
  <div class="">
    <%- include('includes/navbar') %>
    <main style="margin-left: 17%;" class="px-8" id="all-posts">
      <%- include('includes/header', {title: "Add Notes"}) %>

      <div class="w-full flex justify-center">
        <form class="w-1/2 flex flex-col gap-4" action="/products" method="POST">
          <div class="flex flex-col gap-2">
            <label>Product Name</label>
            <input required class="rounded-md px-4 py-2 bg-black placeholder:text-[#ffffff5b] focus:text-white" placeholder="Type a product name" name="name" type="text">
          </div>
          <div class="flex flex-col gap-2">
            <label>Price</label>
            <input min="1" required class="rounded-md px-4 py-2 bg-black placeholder:text-[#ffffff5b] focus:text-white" placeholder="Type a price" name="price" type="number">
          </div>
          <div class="flex flex-col gap-2">
            <label>Stock</label>
            <input min="1" required class="rounded-md px-4 py-2 bg-black placeholder:text-[#ffffff5b] focus:text-white" placeholder="Type a stock" name="stock" type="number">
          </div>
          <div class="flex flex-col gap-2">
            <label for="author">Select Category</label>
            <select required class="rounded-md px-4 py-2 bg-black placeholder:text-[#ffffff5b] focus:text-white" id="author" name="category">
              <option value="" disabled selected>Categories</option>
              <% for(const cat of category){%>
              <option value="<%= cat._id %>">
                <%= cat.name %>
              </option>
              <%}%>
          </select>
        </div>
        <button class="rounded-md px-4 py-2 bg-blue-900 text-white">Add Product</button>
      </form>
    </div>

    </main>
  </div>
</body>

</html>